<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/main_linear"
    tools:context=".RechargeActivity">
    <RelativeLayout
        style="@style/top_banner_rel"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgv_close"
            style="@style/nav_close"
            android:src="@drawable/ic_back_img"/>

        <TextView
            style="@style/nav_text"
            android:text="포인트 충전"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="충전 금액"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edt_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 잔액"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/rc_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_rechar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="충전하기"/>
</RelativeLayout>