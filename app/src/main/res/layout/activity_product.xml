            style="@style/menu_rel">
            <ImageView
                style="@style/name_imgv"
                android:id="@+id/imgv_menu1"
                android:src="@drawable/ic_launcher_foreground"/>
            <TextView
                style="@style/detail_text"
                android:id="@+id/tv_menu1"
                android:layout_below="@+id/imgv_menu1"
                android:text="김밥\n 가격: 4,000원"
                />
        </RelativeLayout>
        <RelativeLayout
            style="@style/menu_rel">
            <ImageView
                style="@style/name_imgv"
                android:id="@+id/imgv_menu2"
