                android:layout_below="@+id/imgv_menu3"
                android:text="김밥\n 가격: 4,000원" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/menu_linear">
        <RelativeLayout
            style="@style/menu_rel">
            <ImageView
                style="@style/name_imgv"
                android:id="@+id/imgv_menu4"
                android:src="@drawable/ic_launcher_foreground"/>
            <TextView
                style="@style/detail_text"
