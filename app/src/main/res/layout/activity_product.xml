                android:layout_below="@+id/imgv_menu6"
                android:text="김밥\n 가격: 4,000원" />
        </RelativeLayout>

    </LinearLayout>
    <TextView
        style="@style/name_text"
        android:text="음료"
        />

    <LinearLayout
        style="@style/menu_linear">
        <RelativeLayout
            style="@style/menu_rel">
            <ImageView
                style="@style/name_imgv"
                android:id="@+id/imgv_drink1"
                android:src="@drawable/ic_launcher_foreground"/>
            <TextView
