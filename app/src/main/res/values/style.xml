<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ic_bg</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="top_banner_rel">
        <item name="android:background">#FFAB91</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <style name="top_banner_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="btn_logout">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:text">로그아웃</item>
    </style>
    <style name="name_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="menu_linear">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="detail_linear">
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="menu_rel">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="name_imgv">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>

    </style>
    <style name="detail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="datail_imgv">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
    </style>
    <style name="detail_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="detail_etd">
        <item name="android:textSize">11dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">90dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">주문 수량 입력</item>
    </style>
    <style name="btn_bottom">

        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

</resources>